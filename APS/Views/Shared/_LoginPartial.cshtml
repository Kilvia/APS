@using Microsoft.AspNetCore.Identity
@using APS.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li style="color: black">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" style="">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    
	<ul class="nav navbar-nav">
		<li><a asp-controller="Account" asp-action="Login"><img id="login" src="~/images/login.png" width="30" height="30"></a></li>
		<li><a asp-controller="Account" asp-action="Login" style="color: black">Login</a></li>
		<li><a asp-controller="Account" asp-action="Register" style="color: black">Register</a></li>
		@*<li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>*@
		@*<li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>*@
	</ul>
}
