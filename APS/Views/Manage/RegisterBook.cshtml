@model APS.Models.Book
@{
    ViewData["Title"] = "RegisterBook";
}
<h2>Cadastrar Livro</h2>
<form asp-action="RegisterBook">
    <input type="hidden" asp-for="SellerId" value="@ViewBag.sellerId"/>
    <fieldset>
        <label asp-for="Title">Título</label>
        <input asp-for="Title" placeholder="Título" />
        <br />
        <label asp-for="Author">Autor</label>
        <input asp-for="Author" placeholder="Autor" />
        <br />
        <label asp-for="Category">Categoria</label>
        <input asp-for="Category" placeholder="Categoria" />
        <br />
        <label asp-for="PublishingCompany">Editora</label>
        <input asp-for="PublishingCompany" placeholder="Editora" />
        <br />
        <label asp-for="Value">Preço</label>
        <input asp-for="Value" placeholder="Preço" />
        <br />
        <label asp-for="Quantity">Quantidade</label>
        <input asp-for="Quantity" placeholder="Quantidade" />
    </fieldset>
    <input type="submit">
</form>

